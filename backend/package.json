{
  "name": "cronos-shield-backend",
  "version": "1.0.0",
  "description": "Cronos Shield - Unified Backend API",
  "packageManager": "pnpm@9.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:prod": "node dist/scripts/migrate.js",
    "lint": "eslint src/**/*.ts",
    "swagger": "node dist/swagger/swagger.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "cronos",
    "x402",
    "risk-oracle",
    "shielded-vaults",
    "cex-dex",
    "observability"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "@crypto.com/facilitator-client": "^1.0.1",
    "ethers": "^6.15.0",
    "axios": "^1.7.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "iconv-lite": "^0.7.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.14.10",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/pg": "^8.16.0",
    "typescript": "^5.6.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4"
  }
}
