# Cronos Shield Backend - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================
# Network Configuration
# ============================================
NETWORK=cronos-testnet
RPC_URL=https://evm-t3.cronos.org
CHAIN_ID=338

# ============================================
# x402 Payment Configuration
# ============================================
MERCHANT_ADDRESS=0xYourMerchantAddress
PRIVATE_KEY=0xYourPrivateKey
PRICE_BASE_UNITS=1000000

# ============================================
# Smart Contract Addresses
# ============================================
RISK_ORACLE_CONTRACT_ADDRESS=0xYourRiskOracleAddress
SHIELDED_VAULT_CONTRACT_ADDRESS=0xYourShieldedVaultAddress

# ============================================
# CEX-DEX Integration (Optional)
# ============================================
# Crypto.com Exchange API (optional - uses mock data if not set)
CRYPTO_COM_API_URL=https://api.crypto.com/v2
CRYPTO_COM_API_KEY=your_crypto_com_api_key_here

# DEX Configuration
DEX_ROUTER_ADDRESS=0x145863Eb42Cf62847A6Ca784e6416C1682b1b2Ae
CRO_TOKEN_ADDRESS=0x5C7F8A570d578ED84E63fdFA7b1eE72dEae1AE23
USDC_TOKEN_ADDRESS=0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0
USDT_TOKEN_ADDRESS=0x66e428c3f67a68878562e79A0234c1F83c208770

# ============================================
# Database Configuration (Optional)
# ============================================
# If not set, uses in-memory storage
DATABASE_URL=postgresql://user:password@localhost:5432/cronos_shield
# Or use individual components:
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cronos_shield

# ============================================
# Observability
# ============================================
SWAGGER_ENABLED=true

# ============================================
# Production URLs (for Railway)
# ============================================
# PUBLIC_RESOURCE_URL=https://your-backend.railway.app
# RAILWAY_PUBLIC_DOMAIN=your-backend.railway.app

# ============================================
# AI/ML Configuration (Future)
# ============================================
# AI_ENABLED=false
# AI_MODEL_PATH=./models
# CRYPTO_COM_AI_API_KEY=your_ai_api_key_here

# ============================================
# Cronoscan API (Optional - for real data)
# ============================================
# CRONOSCAN_API_KEY=your_cronoscan_api_key_here
